@model IEnumerable<Limdo.Web.App.Models.PcoLicenceDetailViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

@{
    foreach (var item in Model)
    {
        Html.Hidden("UriKey");
    }
}

<h1>Pco Licences Details</h1>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PcoLicenceNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExprireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueDate)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PcoLicenceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExprireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssueDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UriKey" class="btn btn-primary">Edit</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.UriKey" class="btn btn-primary">Details</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.UriKey" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
